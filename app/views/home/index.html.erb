<div class="row">
  <div class="large-12 small-12 columns large-centered">
    <div class="radius panel" style="margin-top:50px;">
      <h1 style="text-align:center;">Qayaam.com</h1>

      <p style="text-align:center;">
        <em>Coming Soon</em>
      </p>

      <h3 class="text-center">Contact</h3>
      <p class="text-center"><em>info@qayaam.com</em></h3>

      <h3 class="text-center">Follow Us on</h3>
      <ul class="list-inline social-icon text-center">
        <li><a href="https://twitter.com/Qayaamdotcom" target="_blank"><i class="fa fa-twitter fa-3x fa-round"></i></a></li>
        <li><a href="https://web.facebook.com/Qayaamdotcom" target="_blank"><i class="fa fa-facebook fa-3x fa-round"></i></a></li>
      </ul>

      <div class="row collapse" style="display: none;">
        <%= form_tag '/interested' do %>
          <div class="large-9 small-10 columns"><%= email_field_tag 'email', nil, placeholder: 'Email address' %></div>
          <div class="large-3 small-2 columns"><%= submit_tag 'Yes!', class: 'postfix radius button' %></div>
          <%= hidden_field_tag :ref, "#{@ref}" %>
        <% end %>
      </div>
    </div>
  </div>
</div>

<% unless alert.blank? %>
  <div class="row">
    <div class="large-5 small-12 columns large-centered">
      <div data-alert class="alert-box radius"><%= alert %></div>
    </div>
  </div>
<% end %>
